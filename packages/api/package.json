{
  "name": "@photoscout/api",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "build": "esbuild src/handlers/*.ts --bundle --platform=node --target=node20 --outdir=dist --format=esm --external:@aws-sdk/* --banner:js=\"import { createRequire } from 'module'; const require = createRequire(import.meta.url);\" && echo '{\"type\":\"module\"}' > dist/package.json",
    "dev": "tsx watch src/dev-server.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:prompt": "vitest run src/tests/prompt.test.ts"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.30.0",
    "@aws-sdk/client-dynamodb": "^3.500.0",
    "@aws-sdk/client-s3": "^3.965.0",
    "@aws-sdk/lib-dynamodb": "^3.500.0",
    "@photoscout/shared": "workspace:*",
    "google-auth-library": "^10.5.0",
    "openai": "^6.15.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.130",
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.0",
    "esbuild": "^0.19.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^4.0.16"
  }
}
