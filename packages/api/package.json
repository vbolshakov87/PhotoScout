{
  "name": "@photoscout/api",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "build": "esbuild src/handlers/*.ts --bundle --platform=node --target=node20 --outdir=dist --format=esm --external:@aws-sdk/* --banner:js=\"import { createRequire } from 'module'; const require = createRequire(import.meta.url);\" && echo '{\"type\":\"module\"}' > dist/package.json",
    "dev": "tsx watch src/dev-server.ts",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:prompt": "vitest run src/tests/prompt.test.ts --config vitest.integration.config.ts",
    "test:llm": "vitest run src/tests/llm-comparison.test.ts --config vitest.integration.config.ts",
    "test:llm:haiku": "CLAUDE_MODEL=haiku vitest run src/tests/llm-comparison.test.ts --config vitest.integration.config.ts",
    "test:llm:sonnet": "CLAUDE_MODEL=sonnet vitest run src/tests/llm-comparison.test.ts --config vitest.integration.config.ts",
    "test:security": "vitest run src/tests/security/security.test.ts --config vitest.integration.config.ts",
    "test:security:quick": "vitest run src/tests/security/security.test.ts --config vitest.integration.config.ts --testNamePattern='Quick'",
    "test:security:critical": "vitest run src/tests/security/security.test.ts --config vitest.integration.config.ts --testNamePattern='Critical'",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@aws-sdk/client-dynamodb": "^3.971.0",
    "@aws-sdk/client-s3": "^3.971.0",
    "@aws-sdk/lib-dynamodb": "^3.971.0",
    "@photoscout/shared": "workspace:*",
    "google-auth-library": "^10.5.0",
    "openai": "^6.16.0",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.160",
    "@types/node": "^25.0.9",
    "@types/uuid": "^11.0.0",
    "esbuild": "^0.27.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^4.0.17",
    "@vitest/coverage-v8": "^4.0.16"
  }
}
