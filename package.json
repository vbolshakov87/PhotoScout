{
  "name": "photoscout",
  "private": true,
  "type": "module",
  "scripts": {
    "dev:web": "pnpm --filter @photoscout/web dev",
    "dev:api": "pnpm --filter @photoscout/api dev",
    "build": "pnpm -r build",
    "build:web": "pnpm --filter @photoscout/web build",
    "build:api": "pnpm --filter @photoscout/api build",
    "deploy": "cd infra && pnpm cdk deploy",
    "test": "pnpm -r test",
    "test:coverage": "pnpm -r test:coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "pnpm -r typecheck",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "eslint": "^9.17.0",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.16",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.4.2",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.18.2"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  }
}
